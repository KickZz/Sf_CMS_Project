<h3>Liste des Articles</h3><hr>

<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>Nom de l'article</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    {% for post in listPost %}
        {% if post.suppress == false %}
            <tr>
                <td>{{ post.name }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('edit_post', { 'id' : post.id }) }}" class="editPostForm btn btn-default">Editer</a>
                        <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a data-toggle="modal" data-backdrop="false" data-target="#formSupPost{{ post.id }}" href="" class="">Supprimer</a></li>
                        </ul>
                        {{ include("SfCmsProjectCmsBundle:Post:windowsSuppressPost.html.twig") }}
                    </div>
                </td>
            </tr>
        {% endif %}
    {% endfor %}
    </tbody>
</table>